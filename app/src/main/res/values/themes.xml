<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skywalker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="regularText_black_19">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">#151515</item>
    </style>

    <style name="regularText_black_13">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">#151515</item>
    </style>

    <style name="semiBoldText_black_14">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="semiBoldText_black_25">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">#1A1A1A</item>
    </style>

    <style name="semiMedium_black_28">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="hintTextColor">#5E6676</item>
        <item name="android:textColor">#1A1A1A</item>
    </style>

    <style name="semiMedium_black_22">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#1A1A1A</item>
    </style>

    <style name="editText_black_15">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="hintTextColor">#5E6676</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/bg_rectangle_rounded_corner_white</item>
    </style>

    <style name="button_green_bg">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/bg_rectangle_rounded_corner_green</item>
    </style>
</resources>